<div class="card session">
  <div class="card-body">
    <h2>Nuevo Registro</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :nick %><br />
          <%= f.text_field :nick, autofocus: true, autocomplete: "nick", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(MÃ­nimo <%= @minimum_password_length %> caracteres)</em>
          <% end %><br />
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "Repite Password" %><br />
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Registratse", class: "btn btn-primary btn-block"%>
        </div>
      <% end %>

      <div class="session-link primary">
        <%= link_to "Volver", new_session_path(resource_name) %>
      </div>

  </div>
</div>




